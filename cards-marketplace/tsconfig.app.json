{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "compilerOptions": {
    "tsBuildInfoFile": "./cards-marketplace/node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "baseUrl": ".", // necess√°rio para os aliases funcionarem
    "paths": {
      "@/*": ["src/*"]
    },

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "erasableSyntaxOnly": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,
    "types": ["node"]  
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.vue"]

  

}

